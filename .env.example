# Database - Get from https://console.neon.tech/
DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"

# NextAuth
# Local development:
NEXTAUTH_URL="http://localhost:3000"
# Production (Vercel):
# NEXTAUTH_URL="https://ticketplatform.vercel.app"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Discord OAuth - Get from https://discord.com/developers/applications
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Bot API Key - For standalone Discord bot authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This key must match the API_KEY in the discord-bot/.env file
BOT_API_KEY="your-bot-api-key-here"
